{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@images/*": ["src/assets/images/*"],
      "@lib/*": ["src/lib/*"],
      "@customTypes/*": ["src/customTypes/*"],
      "@src/*": ["src/*"]
    }
  }
}
